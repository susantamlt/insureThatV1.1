        <!-- Content
        ============================================= -->
        <section id="content">

            <div class="content-wrap">

                <div class="container clearfix">

                    <div class="row content mt-60">
                        <div class="col-lg-5 col-md-5 col-sm-5 col-xs-12 text-center login-head-1">
                            <h1>Password</h1>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="col-lg-12 login-head-2">
                                <div class="col-md-3 col-md-3 col-md-12 text-center"><img src="~/images/agent-login-icon.png" class="agent-icon" /></div>
                                <div class="col-md-9 col-md-9 col-md-12"><h3>Forgot Password</h3></div>
                            </div>
                            if (ViewBag.SuccessMessage != null && ViewBag.SuccessMessage != "")
                            {
                            <div class="col-md-12 form-group alert alert-success" id="successmessage">
                                @ViewBag.SuccessMessage
                            </div>
                            }
                            if (ViewBag.ErrorMessage != null && ViewBag.ErrorMessage != "")
                            {
                            <div class="col-md-12 form-group alert alert-danger" id="errormessage">
                                @ViewBag.ErrorMessage
                            </div>
                            }
                            @using (Ajax.BeginForm("ForgetPassword", "Login", null, new AjaxOptions()
                            {
                                HttpMethod = "POST",
                                OnBegin = "frgtBegin",
                                OnSuccess = "frgtsuccess",
                                OnFailure = "frgtfailure"

                            }))
                            {
                                @Html.AntiForgeryToken()
                              
                                <div class="col-md-12 form-group">
                                    <label class="col-lg-3 col-md-3 col-sm-4 col-xs-12">EMAIL ID</label>
                                    <div class="col-lg-9 col-md-9 col-sm-8 col-xs-12">
                                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control form-border-bottom", @id = "emailid" })
                                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })


                                    </div>
                                </div>
                                    <div class="clearfix"></div>
                                    <div class="col-md-12 form-group">

                                        <div id="errormessage" class="col-md-12"></div>
                                        @*<div class="g-recaptcha col-md-12" data-sitekey="6LesHDMUAAAAADyrBT2H7my6XEKDUgryueig11kc"></div>*@
                                        <div class="g-recaptcha" data-sitekey="6LeIxAcTAAAAAJcZVRqyHh71UMIEGNQ_MXjiZKhI"></div>   @*Local*@
                                        <input type="hidden" class="hiddenRecaptcha required" name="hiddenRecaptcha" id="hiddenRecaptcha">



                                        <div class="col-lg-9 col-md-9 col-sm-8 col-xs-12">
                                            <!-- <div class="col-md-6 col-sm-12 col-xs-12 captcha"><img src="images/captcha.png" width="100" /></div> -->
                                            <div class="col-md-6 col-sm-12 col-xs-12 pull-right mt-30">
                                                @*<input type="text" name="captchatext" placeholder="" ="Enter Captcha" class="form-control form-border-bottom" />*@
                                            </div>
                                        </div>
                                    </div>
                                    <div class="clearfix">&nbsp;</div>
                                    <div class="col-md-12">
                                        <button type="submit" id="forgetpassword" class="btn-primary btn pull-right">Submit</button>
                                    </div>
                            }
                        </div>
                    </div>



                </div>

            </div>

        </section><!-- #content end -->
        <!-- Footer
        ============================================= -->
        <footer id="footer">



            <!-- Copyrights
            ============================================= -->
            <div id="copyrights">

                <div class="container-fluid clearfix">

                    <div class="col_half">

                        <div class="copyright-links"><a href="#">Terms of Use</a> / <a href="#">Privacy Policy</a></div>
                    </div>

                    <div class="col_half col_last tright">
                        <div class="fright clearfix">
                            <a href="#" class="social-icon si-small si-borderless si-facebook">
                                <i class="icon-facebook"></i>
                                <i class="icon-facebook"></i>
                            </a>

                            <a href="#" class="social-icon si-small si-borderless si-twitter">
                                <i class="icon-twitter"></i>
                                <i class="icon-twitter"></i>
                            </a>


                            <a href="#" class="social-icon si-small si-borderless si-linkedin">
                                <i class="icon-linkedin"></i>
                                <i class="icon-linkedin"></i>
                            </a>
                        </div>


                    </div>

                </div>

            </div><!-- #copyrights end -->

        </footer><!-- #footer end -->

    </div><!-- #wrapper end -->
    <!-- Go To Top
    ============================================= -->
    <div id="gotoTop" class="icon-angle-up"></div>

    <!-- External JavaScripts
    ============================================= -->
    <script type="text/javascript" src="~/js/jquery.js"></script>
