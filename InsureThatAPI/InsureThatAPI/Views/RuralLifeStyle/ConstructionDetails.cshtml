                            @Html.TextBoxFor(p => p.YearofBuiltObj.YearBuilt, new { @class = "form-control form-border-bottom commondataselection", @id = "yearbuilt" })
                            @Html.HiddenFor(p => p.YearofBuiltObj.EiId)
                        </p>
                    </div>
                    <div class="mt-10 mb-10 col-md-12">
