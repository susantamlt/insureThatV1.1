                                    data: { "unid": selectedunid, "cid": selectedcid, pcid: PcId },
                                    success: function (responce) {
                                    }
                                });
                            });
                            $("#bindcover").click(function () {
                                $.ajax({
                                    type: "POST",
                                    url: "/Customer/BindCover",
                                    data: {},
                                    success: function (responce) {
                                    }
                                });
                            });
                        </script>
                    }
