                    }
                }
                else
                {
                    using (Ajax.BeginForm("Valuables", "PolicyDetails", new { cid = @ViewBag.cid, PcId = @ViewBag.PcId, step = 2 }, new AjaxOptions()
                    {
                        HttpMethod = "GET"

                    }))
                    {
                        <div class="well">
                            @Html.HiddenFor(p => p.CustomerId)
                            <h3>HOME CONTENTS DETAILS</h3>
                            <div class="row">
                                <p class="col-md-12 col-sm-12 col-xs-12 alert alert-info"><strong>No details</strong></p>
                            </div>
                            <div class="row">
                                <button type="submit" class="btn-primary btn pull-right" style="margin-top:5% !important;">NEXT</button>
