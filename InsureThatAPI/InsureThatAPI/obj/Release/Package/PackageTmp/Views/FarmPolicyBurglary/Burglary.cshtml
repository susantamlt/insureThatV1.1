                <div class="col-md-6 col-sm-6 col-xs-12">
                    @Html.TextBoxFor(p => p.SpecifiedItemsOver5KFPObj.SpecifiedItemOver5K, new { @class = "form-control form-border-bottom", @id = "FPSpecItems" })
                    @Html.HiddenFor(p => p.SpecifiedItemsOver5KFPObj.EiId)
                </div>
            </div>
            <div class="clearfix mb-md-30 mt-10 mb-10">
                <div class="col-md-6"><p>Excess for burglary</p></div>
                <div class="col-md-3">
                    @Html.DropDownListFor(Model => Model.ExcessFPBurglaryObj.Excess, @Model.ExcessFPBurglaryObj.ExcessList, new { @class = "gray-bg-underline form-control form-border-bottom field-length-sm", @id = "excess" })
                    @Html.HiddenFor(p => p.ExcessFPBurglaryObj.EiId)
                </div>
                <div class="col-md-3">
                    <div class="policy-loc-row"><input type="checkbox" name="ImposedBuglaryObj.Imposed" id="imposed"><label for="checkbox1"><span><span></span></span>Imposed</label></div>
                </div>
            </div>
            <h5 class="col-md-12 mt-10">Optional Extras</h5>
