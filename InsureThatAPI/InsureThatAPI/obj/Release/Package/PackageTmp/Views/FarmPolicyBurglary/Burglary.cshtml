<script type="text/javascript" src="~/Scripts/jquery.validate.js"></script>
<script type="text/javascript" src="~/Scripts/additional-methods.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $.validator.addMethod("regex", function (value, element, regexp) {
            if (regexp.constructor != RegExp)
                regexp = new RegExp(regexp);
            else if (regexp.global)
                regexp.lastIndex = 0;
            return this.optional(element) || regexp.test(value);
        }, "Please check your input.");
        $("form[name='burglary']").validate({
            errorContainer: "#errorContainer",
            errorLabelContainer: "#errorContainer",
            errorElement: "li",
            rules: {
                "FarmBuildingExCoolRoomsFPObj.FarmBuildingExcCoolRooms": {
                    regex: /^[0-9]*$/,
                },

                "CoolRoomsFPObj.CoolRooms": {
                    regex: /^[0-9]*$/,
                },
                "FarmFencingFPObj.FarmFencing": {
                    regex: /^[0-9]*$/,
                },

                "OtherFarmStructuresFPObj.OtherFarmStructures": {
                    regex: /^[0-9]*$/,
                },
                "FarmContentsFPObj.FarmContents": {
                    regex: /^[0-9]*$/,
                },

                "HailNettingStoredFPObj.HailNettingStored": {
                    regex: /^[0-9]*$/,
                },
                "UnspecifiedMachineryFPObj.UnspecifiedMachinery": {
                    regex: /^[0-9]*$/,
                },

                "SpecifiedItemsOver5KFPObj.SpecifiedItemOver5K": {
                    regex: /^[0-9]*$/,
                },
            },
            messages: {
                "FarmBuildingExCoolRoomsFPObj.FarmBuildingExcCoolRooms": {
                    regex: "Only numeric allowed in Cover details of Farm Buildings"
                },

                "CoolRoomsFPObj.CoolRooms": {
                    regex: "Only numeric allowed in Cover Details of Coolrooms"
                },
                "FarmFencingFPObj.FarmFencing": {
                    regex: "Only numeric allowed in Cover Details of Farm Fencing"
                },
                "OtherFarmStructuresFPObj.OtherFarmStructures": {
                    regex: "Only numeric allowed in Cover Details of Other Farm Structures"
                },
                "FarmContentsFPObj.FarmContents": {
                    regex: "Only numeric allowed in Cover Details of Farm Contents"
                },
                "HailNettingStoredFPObj.HailNettingStored": {
                    regex: "Only numeric allowed in Cover Details of Hail Netting"
                },
                "UnspecifiedMachineryFPObj.UnspecifiedMachinery": {
                    regex: "Only numeric allowed in Cover Details of Unspecified Machinery"
                },
                "SpecifiedItemsOver5KFPObj.SpecifiedItemOver5K": {
                    regex: "Only numeric allowed in Cover Details of Specified Items"
                },

            },
            onfocusout: function (element) {
                this.element(element);
            },
            submitHandler: function (form) {
                form.submit();
            }
        });
    });
</script>